<div class="container">
  <div class="row">
    <h3> Payments In Progress</h3>
    <div class="column">
		<%= form_tag(posts_path, :method => "get", id: "search-form") do %>
		<%= text_field_tag :search, params[:search], placeholder: "Search Payment by Alice Public Key" %>
		<%= submit_tag "Search" %>
		<% end %>
      <table class="table">
        <tbody>
          <% @payments.each do |payment| %>
            <tr>
              <%= render payment %>
            </tr>
          <% end %>
        </tbody>
      </table>
	  <div class="apple_pagination">
		<%= will_paginate @payments %>
	  </div>
    </div>
  </div>
</div>