<div class="container">
  <div class="row">
	<h1>Edit Oracle Contract # <%= @script.id if @script %>: <%= @script.title if @script %></h1>
	<div><pre style="width:600px"><code><%= @script.description %></code></pre></div>
	<%= form_for(@script, multipart: true) do |f| %>
	
	<div class="field" id="contract_string">
	    <p><%= f.label 'Contract String' %></br>
	  	<%= f.text_field :contract, :style => "width:400px;", :placeholder => "{time_limit:1474299166,rate_limit:545.00}" %></p>
		</div>
	
	<div class="field">
		<p><%= f.label 'Beneficiary (compressed) Public Key' %></br>
		<%= f.text_field :oracle_1_pub_key, :style => "width:540px;", :placeholder => "039DD14C371FBB1BCA9860942D14ED32897CF4ABF8312A6446EBF716774769441B" %></p>
	</div>
	
	<div class="field">
		<p><%= f.label 'Oracle (compressed) Public Key' %></br>
		<%= f.text_field :oracle_2_pub_key, :style => "width:540px;", :placeholder => "02BE332AE534CC30FB84BA64817A748DBC9A9C9021463A645F5B3CF2AB4AEB0284" %></p>
	</div>
	
	<%= f.submit 'Update contract with parameters', :class => "btn btn-primary" %> |<%= link_to "Cancel", @script %>

	<% end %>
</br>
   </div>
</div>